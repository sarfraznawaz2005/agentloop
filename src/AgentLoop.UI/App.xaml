<Application x:Class="AgentLoop.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:AgentLoop.UI.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:InverseBoolConverter x:Key="InverseBool"/>
            <converters:JobStatusToIconConverter x:Key="StatusToIcon"/>
            <converters:RelativeTimeConverter x:Key="RelativeTime"/>
            <converters:CountdownConverter x:Key="Countdown"/>
            <converters:EnumToBoolConverter x:Key="EnumToBool"/>
            <converters:EnumToVisibilityConverter x:Key="EnumToVisibility"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
            <converters:JobScheduleConverter x:Key="JobSchedule"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
            <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

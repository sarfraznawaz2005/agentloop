<Window x:Class="AgentLoop.UI.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        Title="About AgentLoop"
         Width="400" Height="380"
         WindowStartupLocation="CenterScreen"
         ResizeMode="NoResize"
         Style="{StaticResource ModernWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,0">
            <Border Background="{StaticResource PrimaryBrush}"
                    CornerRadius="16"
                    Width="64" Height="64"
                    Margin="0,0,0,16">
                <fa:IconBlock Icon="Robot" FontSize="32" Foreground="White"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <TextBlock Text="AgentLoop"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       FontFamily="{StaticResource PrimaryFont}"/>

            <TextBlock x:Name="VersionText"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,20"
                       FontFamily="{StaticResource PrimaryFont}"/>

            <TextBlock Text="Schedule and run AI agent jobs using&#x0a;Windows Task Scheduler."
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       FontFamily="{StaticResource PrimaryFont}"
                       LineHeight="18"/>

            <TextBlock Text="Built with .NET 8 and WPF"
                       FontSize="11"
                       Foreground="{StaticResource TextDisabledBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"
                       FontFamily="{StaticResource PrimaryFont}"/>
        </StackPanel>

        <Border Grid.Row="1" Padding="16"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Button Style="{StaticResource PrimaryButton}"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Center"
                    MinWidth="100">
                <TextBlock Text="Close"/>
            </Button>
        </Border>
    </Grid>
</Window>

<Window x:Class="AgentLoop.UI.Views.RunJobDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AgentLoop.UI.ViewModels"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
        Title="{Binding WindowTitle}"
        Width="750" Height="550"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="{Binding JobName}" Style="{StaticResource Heading}"/>
                <TextBlock Text="{Binding Prompt}" Foreground="{StaticResource TextSecondaryBrush}"
                           TextWrapping="Wrap" MaxHeight="70"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Status -->
            <Border Grid.Column="1" Padding="12,6" CornerRadius="16" VerticalAlignment="Top">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Completed}">
                                <Setter Property="Background" Value="#d4edda"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Failed}">
                                <Setter Property="Background" Value="#f8d7da"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Cancelled}">
                                <Setter Property="Background" Value="#fff3cd"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Completed}">
                                        <Setter Property="Fill" Value="{StaticResource AccentBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Failed}">
                                        <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Cancelled}">
                                        <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Running..."/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Completed}">
                                        <Setter Property="Text" Value="Completed"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Failed}">
                                        <Setter Property="Text" Value="Failed"/>
                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static vm:RunStatus.Cancelled}">
                                        <Setter Property="Text" Value="Cancelled"/>
                                        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Margin="8,0,0,0" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}">
                        <Run Text="{Binding ElapsedSeconds, StringFormat='{}{0:F1}s', Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" IsIndeterminate="{Binding IsRunning}"
                     Height="4" Margin="0,0,0,12"
                     Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"
                     Style="{StaticResource ModernProgressBar}"/>

        <!-- Output -->
        <Border Grid.Row="2" Background="{StaticResource HoverBrush}" 
                CornerRadius="8">
            <md:MarkdownScrollViewer x:Name="MarkdownViewer"
                                     Markdown="{Binding Output, Mode=OneWay}"
                                     Padding="16"
                                     Background="Transparent">
            </md:MarkdownScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Style="{StaticResource SecondaryButton}"
                    IsEnabled="{Binding IsCompleted}"
                    Click="ExportClick" Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="FileExport" Style="{StaticResource ButtonIcon}"/>
                    <TextBlock Text="Export"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource SecondaryButton}"
                    IsEnabled="{Binding IsCompleted}"
                    Click="CopyClick" Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Copy" Style="{StaticResource ButtonIcon}"/>
                    <TextBlock Text="Copy"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DangerButton}"
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="StopCircle" Style="{StaticResource ButtonIcon}"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource SecondaryButton}"
                    Command="{Binding RerunCommand}"
                    Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibility}}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Redo" Style="{StaticResource ButtonIcon}"/>
                    <TextBlock Text="Rerun"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource PrimaryButton}"
                    Command="{Binding CloseCommand}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Times" Style="{StaticResource ButtonIcon}"/>
                    <TextBlock Text="Close"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="AgentLoop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AgentLoop.UI.ViewModels"
        xmlns:models="clr-namespace:AgentLoop.Data.Models;assembly=AgentLoop.Data"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:helpers="clr-namespace:AgentLoop.UI.Helpers"
        Title="AgentLoop"
        Height="680" Width="1050"
        MinHeight="550" MinWidth="850"
        WindowStartupLocation="CenterScreen"
        Icon="/agentloop.ico"
        Style="{StaticResource ModernWindow}">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="245" MinWidth="200"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Jobs List -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Padding="16,12"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Jobs" Style="{StaticResource SubHeading}"/>
                    </Border>

                    <!-- Job List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding FilteredJobs}"
                             SelectedItem="{Binding SelectedJob}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             MouseDoubleClick="JobListBox_MouseDoubleClick"
                             KeyDown="JobListBox_KeyDown">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4,6">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Row 0: Checkbox, Icon, Name -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,2">
                                        <CheckBox IsChecked="{Binding Enabled, Mode=OneWay}"
                                                  Style="{StaticResource ModernCheckBox}"
                                                  Command="{Binding DataContext.ToggleJobEnabledCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,12,0"
                                                  Padding="0"/>
                                        <fa:IconBlock Icon="{Binding Icon, FallbackValue=CheckCircle}"
                                                     Foreground="{Binding HexColor, FallbackValue={StaticResource PrimaryBrush}}"
                                                     FontSize="18"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Row 1: Schedule (Full Width) -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Schedule, Converter={StaticResource JobSchedule}}" 
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Edit" Command="{Binding EditJobCommand}"/>
                                <MenuItem Header="Delete" Command="{Binding DeleteJobCommand}"/>
                                <Separator/>
                                <MenuItem Header="Run Now" Command="{Binding RunNowCommand}"/>
                                <MenuItem Header="View" Command="{Binding ViewJobCommand}"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>

                    <!-- Add Button -->
                    <Border Grid.Row="2" Padding="12"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Button Style="{StaticResource PrimaryButton}"
                                Command="{Binding AddJobCommand}"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Plus" Style="{StaticResource ButtonIcon}"/>
                                <TextBlock Text="Add Job"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center"
                          Background="Transparent" Cursor="SizeWE"/>

            <!-- Right Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="40">
                        <RowDefinition.Style>
                            <Style TargetType="RowDefinition">
                                <Setter Property="Height" Value="Auto"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsUpcomingRunsExpanded}" Value="True">
                                        <Setter Property="Height" Value="*"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                    <RowDefinition Height="12"/>
                    <RowDefinition MinHeight="40">
                        <RowDefinition.Style>
                            <Style TargetType="RowDefinition">
                                <Setter Property="Height" Value="Auto"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunLogsExpanded}" Value="True">
                                        <Setter Property="Height" Value="*"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                </Grid.RowDefinitions>

                <!-- Upcoming Runs -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="16,12"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Background="Transparent"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleUpcomingRunsCommand}"/>
                            </Border.InputBindings>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Upcoming Runs" Style="{StaticResource SubHeading}"/>
                                <fa:IconBlock Grid.Column="1" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}">
                                    <fa:IconBlock.Style>
                                        <Style TargetType="fa:IconBlock" BasedOn="{StaticResource ButtonIcon}">
                                            <Setter Property="Icon" Value="ChevronDown"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUpcomingRunsExpanded}" Value="True">
                                                    <Setter Property="Icon" Value="ChevronUp"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </fa:IconBlock.Style>
                                </fa:IconBlock>
                            </Grid>
                        </Border>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding UpcomingRuns}"
                                      Margin="12,8"
                                      Visibility="{Binding IsUpcomingRunsExpanded, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding JobName}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding ScheduleDescription}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding NextRunTime, Converter={StaticResource Countdown}}"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Grid.Row="1"
                                   Text="No upcoming runs"
                                   Foreground="{StaticResource TextDisabledBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding UpcomingRuns.Count}" Value="0"/>
                                                <Condition Binding="{Binding IsUpcomingRunsExpanded}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Run Logs -->
                <Border Grid.Row="2"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="16,12"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Background="Transparent"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleRunLogsCommand}"/>
                            </Border.InputBindings>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource SubHeading}">
                                    <Run Text="Run Logs"/>
                                    <Run Text=" (" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text="{Binding RecentLogsTotalCount, Mode=OneWay}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text=")" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>

                                <!-- Search Box and Status Filter -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0"
                                            Visibility="{Binding IsRunLogsExpanded, Converter={StaticResource BoolToVisibility}}">
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Width="200" Height="28"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <fa:IconBlock Icon="Search" Grid.Column="0"
                                                         FontSize="12" Margin="8,0"
                                                         Foreground="{StaticResource TextSecondaryBrush}"
                                                         VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding LogSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Padding="2,4"
                                                     FontSize="12"
                                                     VerticalContentAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <ComboBox Style="{StaticResource ModernComboBox}"
                                              Width="110" Height="28" FontSize="12"
                                              Padding="8,4"
                                              SelectedValue="{Binding LogStatusFilter}"
                                              SelectedValuePath="Content" VerticalAlignment="Center">
                                        <ComboBoxItem Content="All"/>
                                        <ComboBoxItem Content="Success"/>
                                        <ComboBoxItem Content="Failed"/>
                                        <ComboBoxItem Content="Favorites"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Style="{StaticResource SecondaryButton}"
                                            Command="{Binding ClearAllRecentLogsCommand}"
                                            Padding="10,4" MinWidth="0" MinHeight="0"
                                            Margin="0,0,12,0"
                                            Visibility="{Binding IsRunLogsExpanded, Converter={StaticResource BoolToVisibility}}">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:IconBlock Icon="TrashAlt" Style="{StaticResource ButtonIcon}"/>
                                            <TextBlock Text="Clear All"/>
                                        </StackPanel>
                                    </Button>
                                    <fa:IconBlock VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}">
                                        <fa:IconBlock.Style>
                                            <Style TargetType="fa:IconBlock" BasedOn="{StaticResource ButtonIcon}">
                                                <Setter Property="Icon" Value="ChevronDown"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRunLogsExpanded}" Value="True">
                                                        <Setter Property="Icon" Value="ChevronUp"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconBlock.Style>
                                    </fa:IconBlock>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <ListView x:Name="RecentLogsList"
                                  Grid.Row="1"
                                  ItemsSource="{Binding RecentLogs}"
                                  SelectedItem="{Binding SelectedRecentLog}"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  GridViewColumnHeader.Click="GridViewColumnHeader_Click"
                                  helpers:GridViewColumnStretch.Enabled="True"
                                  MouseDoubleClick="RecentLogsList_MouseDoubleClick"
                                  KeyDown="RecentLogsList_KeyDown"
                                  Visibility="{Binding IsRunLogsExpanded, Converter={StaticResource BoolToVisibility}}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource FavoriteBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeader}">
                                    <GridViewColumn Width="60" helpers:GridViewColumnSort.SortPropertyName="Status">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Status" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                                                    <Ellipse Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="{StaticResource AccentBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:JobStatus.Failure}">
                                                                        <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Job" Width="240" helpers:GridViewColumnSort.SortPropertyName="JobName" helpers:GridViewColumnStretch.StretchColumn="True">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid Height="20" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding JobName}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0" Padding="0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Start Time" Width="240" helpers:GridViewColumnSort.SortPropertyName="StartTime" helpers:GridViewColumnStretch.StretchColumn="True">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid Height="20" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding StartTime, StringFormat='{}{0:g}'}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" Margin="0" Padding="0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="85" helpers:GridViewColumnSort.SortPropertyName="DurationSeconds">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Duration" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DurationSeconds, StringFormat='{}{0:F1}s'}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" Margin="0" Padding="0" TextAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="90" helpers:GridViewColumnSort.SortPropertyName="StartTime">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Ago" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StartTime, Converter={StaticResource RelativeTime}}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" Margin="0" Padding="0" HorizontalAlignment="Center" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="145">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Actions" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Button Style="{StaticResource IconButton}"
                                                            Padding="6,2" MinWidth="0" MinHeight="0"
                                                            Command="{Binding DataContext.ViewRecentLogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,0,4,0"
                                                            ToolTip="View Log">
                                                        <fa:IconBlock Icon="Eye" FontSize="12" Foreground="#1a73e8"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}"
                                                            Padding="6,2" MinWidth="0" MinHeight="0"
                                                            Command="{Binding DataContext.RerunRecentLogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,0,4,0"
                                                            ToolTip="Rerun">
                                                        <fa:IconBlock Icon="Redo" FontSize="12" Foreground="#34a853"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}"
                                                            Padding="6,2" MinWidth="0" MinHeight="0"
                                                            Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,0,4,0"
                                                            ToolTip="Favorite">
                                                        <fa:IconBlock FontSize="12">
                                                            <fa:IconBlock.Style>
                                                                <Style TargetType="fa:IconBlock">
                                                                    <Setter Property="Icon" Value="Heart"/>
                                                                    <Setter Property="IconFont" Value="Regular"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                            <Setter Property="IconFont" Value="Solid"/>
                                                                            <Setter Property="Foreground" Value="#e91e63"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </fa:IconBlock.Style>
                                                        </fa:IconBlock>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}"
                                                            Padding="6,2" MinWidth="0" MinHeight="0"
                                                            Command="{Binding DataContext.DeleteRecentLogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            IsEnabled="{Binding IsFavorite, Converter={StaticResource InverseBool}}"
                                                            ToolTip="Delete">
                                                        <fa:IconBlock Icon="Trash" FontSize="12" Foreground="#ea4335"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <TextBlock Grid.Row="1"
                                   Text="No runs yet"
                                   Foreground="{StaticResource TextDisabledBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding RecentLogs.Count}" Value="0"/>
                                                <Condition Binding="{Binding IsRunLogsExpanded}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Border Grid.Row="2" Padding="12">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding HasMoreRecentLogs}" Value="True"/>
                                                <Condition Binding="{Binding IsRunLogsExpanded}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button Style="{StaticResource SecondaryButton}"
                                    Command="{Binding LoadMoreRecentLogsCommand}"
                                    Click="LoadMoreRecentLogs_Click"
                                    HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="ChevronDown" Style="{StaticResource ButtonIcon}"/>
                                    <TextBlock Text="Load More"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource HoverBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Task Scheduler Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Margin="0,0,6,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource AccentBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTaskSchedulerRunning}" Value="False">
                                        <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontSize="11" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Task Scheduler: Running"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTaskSchedulerRunning}" Value="False">
                                        <Setter Property="Text" Value="Task Scheduler: Not Running"/>
                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Paused Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                            Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="PAUSED" Foreground="{StaticResource WarningBrush}"
                               FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Job Count -->
                <TextBlock Grid.Column="2" FontSize="11" VerticalAlignment="Center">
                    <Run Text="{Binding ActiveJobCount, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <Run Text=" active job(s)" Foreground="{StaticResource TextPrimaryBrush}"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Panel.ZIndex="1000" Grid.RowSpan="3" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.3"/>
            </Grid.Background>
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="24,16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar IsIndeterminate="True"
                                 Width="80" Height="4"
                                 Foreground="{StaticResource PrimaryBrush}"
                                 Background="Transparent"/>
                    <TextBlock Text="Loading..."
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
